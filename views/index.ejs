<%- include('./partials/header') %>

<nav class="navbar bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Todo App</a>
  </div>
</nav>

<div class="container">
  <form action="add/todo" method="post" class="mt-5 d-flex">
    <input
      type="text"
      name="todo"
      class="form-control"
      placeholder="Enter Todo"
    />
    <input
      type="submit"
      value="Add Todos"
      class="btn btn-lg btn-primary mx-2"
    />
  </form>

  <ul class="list-group mt-5">
    <% todo.forEach(todos => { %>
    <li class="list-group-item">
      <%- todos.todo %>
      <a href="/delete/todo/<%- todos._id %>" class="btn btn-danger btn-sm"
        >Delete</a
      >
    </li>
    <% }) %>
  </ul>
</div>

<%- include('./partials/footer') %>
